#!/usr/bin/env bash
set -eo pipefail

run_back_end_tests() {
    flake8 viewer
    coverage run ./manage.py test
}

run_front_end_tests() {
    ./node_modules/gulp/bin/gulp.js test
}

case $1 in
    dev)
        # Wait for database to get started.
        ./bin/wait-for-it.sh db:5432 --timeout=0 --strict
        if [ $? -eq 0 ]; then
            ./manage.py migrate --noinput
            # Try running this in a loop, so that the whole container
            # doesn't exit when runserver reloads and hits an error.
            while [ 1 ]; do
                ./manage.py runserver 0.0.0.0:8000
                sleep 1
            done
        fi
        ;;
    prod)
        ./manage.py migrate --noinput
        exec gunicorn viewer.wsgi:application -b 0.0.0.0:${PORT:-8000} --log-file -
        ;;
    test)
        shift
        coverage erase

        if [[ $1 == "backend" ]]; then
            run_back_end_tests
            coverage report -m
        elif [[ $1 == "frontend" ]]; then
            run_front_end_tests
        else
            run_back_end_tests
            run_front_end_tests
            if [[ ! -z ${CI} ]]; then
                coverage xml
                bash <(curl -s https://codecov.io/bash) -s /tmp
            else
                coverage report -m
            fi
        fi
        ;;
    *)
        exec "$@"
        ;;
esac
