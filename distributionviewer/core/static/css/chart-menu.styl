@import 'lib';


.chart-menu {
  display: none;
  font-weight: 100;
  height: 100%;
  // Offset total padding-left so the links are flush against the left window edge.
  margin-left: - ($min-padding + $med-padding);
  padding: $lrg-padding $med-padding $med-padding 0;
  width: $menu-width;

  ul {
    list-style: none;
    margin: $min-padding 0 0;
    padding: 0;
  }

  a {
    color: $normal-text;
    font-size: 12px;
    text-decoration: none;
    line-height: 2.5;
    display: block;
    border-radius: 0 4px 4px 0;
    padding: 0 $min-padding 0 0;
    text-align: right;

    &:hover {
      background-image: linear-gradient(90deg, #001021 0%, #00224A 100%);
    }
  }
}

@media $base-tablet {
  .chart-menu {
    display: block;
  }
}
