@import 'lib';

$y-axis-width = 10px;

.chart-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 100%;

  .chart {
    height: $chart-preview-height;
    padding-bottom: $lrg-padding;
    position: relative;
    width: $chart-preview-width;
    margin-bottom: $med-padding;
  }
  .chart-list-name {
    color: $mild-blue;
    font-size: 15px;
    text-align: center;
    font-weight: 100;
    padding: 10px 0 10px $y-axis-width; // Adjustment for SVG margins and enough padding to make it a decent-sized tooltip target
    margin: 0;
  }
  .chart-link {
    margin-bottom: $med-padding;
  }
  .chart-link, .chart-link:hover {
    text-decoration: none;
    color: inherit;
  }
  .tooltip {
    margin-left: $y-axis-width;
  }
}

@media $base-tablet {
  .chart-link {
    margin: 10px;
  }
}
