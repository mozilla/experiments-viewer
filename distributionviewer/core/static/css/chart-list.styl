@import 'lib';

.chart-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 100%;

  .chart {
    height: $chart-preview-height;
    padding-bottom: $lrg-padding;
    position: relative;
    width: $chart-preview-width;
    margin-bottom: $med-padding;
  }
  .chart-list-name {
    color: $mild-blue;
    font-size: 15px;
    text-align: center;
    font-weight: 100;
    margin: 5px 0 5px 10px; // Adjustment for SVG margins.
  }
  .chart-link, .chart-link:hover {
    text-decoration: none;
    color: inherit;
  }
}

@media $base-tablet {
  .chart-link {
    margin: 10px;
  }
}
