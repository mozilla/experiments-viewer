/* Sizes */
$min-sidebar-width = 1030px;

/* Colors */
$background-color = #fff;
$normal-text = rgba(0,0,0,0.6);
$mild-blue = #4A90E2;
$green = #b3c89b;

/* Spacing */
$default-whitespace = 20px;
$header-height = 70px;
$filters-width = 300px;
$filters-margin-right = 30px;
$mobile-filter-button-padding = 10px;

/* Placeholder selectors */
$clearfix {
  overflow: auto;
}

* {
  box-sizing: border-box;
}

body {
  background-color: $background-color;
  color: $normal-text;
  font-family: helvetica, sans-serif;
  margin: 0;

  &:not(.filtered) {
    padding: 0 $default-whitespace;
  }
}

a {
  color: $mild-blue;
}

.global-wrapper {
  margin: 0 auto;
  max-width: 1400px;
}

.filtered-charts {
  display: flex;

  @media all and (max-width: $min-sidebar-width) {
    display: block;
  }
}

.filters {
  background-color: $green;
  margin-right: $filters-margin-right;
  padding-left: 40px;
  padding-right: @padding-left;
  min-width: $filters-width;

  /* Make the filter sidebar touch the top of the page, but keep the text
     aligned with the main content. */
  margin-top: -($header-height)
  padding-top: $header-height;

  @media all and (max-width: $min-sidebar-width) {
    margin: $default-whitespace 0;
    padding: 20px 20px 20px (20px - $mobile-filter-button-padding);
  }

  ul {
    @extends $clearfix;

    list-style: none;
    padding: 0;
    margin: 0;
  }

  li {
    margin-bottom: 10px;

    &:last-child {
      margin-bottom: 0;
    }

    @media all and (max-width: $min-sidebar-width) {
      float: left;
      margin: 5px 5px 5px 0;
    }
  }

  a {
    color: $normal-text;
    font-size: 14px;
    font-weight: bold;
    text-decoration: none;

    @media all and (max-width: $min-sidebar-width) {
      display: block;
      padding: $mobile-filter-button-padding;
    }
  }
}

.primary-header {
  height: $header-height;

  .filtered & {
    margin-left: $filters-width + $filters-margin-right;

    @media all and (max-width: $min-sidebar-width) {
      margin: 0 $default-whitespace;
    }
  }

  h1 {
    font-size: 20px;
    font-weight: 200;
    padding-top: 15px;
    margin-top: 0;
  }

  .date-range {
    font-size: 14px;
    font-weight: bold;
  }
}

.primary-header-link {
  text-decoration: none;

  &:hover {
    border-bottom: 1px solid $mild-blue;
  }
}

.chart-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;

  .chart {
    width: 350px;
    height: 250px;
  }

  .chart-link {
    margin-bottom: #default-whitespace;
  }
}

.chart-detail {
  .chart {
    height: 60vh;
    margin: $default-whitespace auto;
    width: 100%;
  }
}
