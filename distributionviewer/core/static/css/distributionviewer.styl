// Colors
$background-color = #fff;
$normal-text = rgba(0,0,0,0.6);
$mild-blue = #4A90E2;
$green = #b3c89b;

// Spacing
$header-height = 85px;
$filters-width = 300px;
$filters-margin-right = 30px;

* {
  box-sizing: border-box;
}

body {
  background-color: $background-color;
  color: $normal-text;
  font-family: helvetica, sans-serif;
  margin: 0;
}

a {
  color: $mild-blue;
}

.global-wrapper {
  margin: 0 auto;
  width: 1400px;
}

.filtered-charts {
  display: flex;
}

.filters {
  background-color: $green;
  margin-right: $filters-margin-right;
  padding-left: 40px;
  padding-right: @padding-left;
  min-width: $filters-width;

  /* Make the filter sidebar touch the top of the page, but keep the text
     aligned with the main content. */
  margin-top: -($header-height)
  padding-top: $header-height;

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  li {
    margin-bottom: 10px;
  }

  a {
    color: $normal-text;
    font-size: 14px;
    font-weight: bold;
    text-decoration: none;
  }
}

.primary-header {
  height: $header-height;

  .filtered & {
    margin-left: $filters-width + $filters-margin-right;
  }

  h1 {
    font-size: 20px;
    font-weight: 200;
    padding-top: 15px;
    margin-top: 0;
  }

  .date-range {
    font-size: 14px;
    font-weight: bold;
  }
}

.primary-header-link {
  text-decoration: none;

  &:hover {
    border-bottom: 1px solid $mild-blue;
  }
}

.chart-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

/* TODO: Un-hide this section when Redux is hooked up to real charts */
.redux-chart-list {
  display: none;
}

/*
  Workaround for this issue:
  https://github.com/yang-wei/rd3/issues/45
*/
.rd3-chart {
  overflow: visible;
}

.rd3-chart-title {
  margin-top: 0;
}

.rd3-basic-chart {
  margin-bottom: 20px;
}
