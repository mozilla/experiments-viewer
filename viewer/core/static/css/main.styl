@import 'lib';

* {
  box-sizing: border-box;
}

body {
  background-color: $background-color;
  color: $normal-text;
  font-family: helvetica, sans-serif;
  margin: 0;
  padding: 0 $min-padding 55px;
}

a {
  color: $mild-blue;
}

.global-wrapper {
  display: flex;
  flex-wrap: wrap;
  padding: $min-padding;
  width: 100%;
}

.primary-header {
  border-bottom: 1px solid $xtreme-green;
  display: flex;
  flex-wrap: wrap;
  font-size: 14px;
  height: $header-height;
  justify-content: space-between;
  margin-bottom: $med-padding;
  width: 100%;

  > * {
    text-align: center;
  }
  > div:first-child {
    width: 100%;
  }
  h2 {
    font-size: 14px;
    font-weight: 200;
  }
}

h1 {
  display: inline;
  font-size: 20px;
  font-weight: 200;
  margin: 0;

  em {
    color: $xtreme-green;
  }
}

.experiment-label {
  margin: 8px 0;
}

.primary-header-link {
  text-decoration: none;

  &:hover {
    border-bottom: 1px solid $mild-blue;
  }
}

.error {
  color: #ff7f7f;
}

summary {
  cursor: pointer;
}

@media $base-tablet {
  .primary-header {
    justify-content: space-between;
    padding: $med-padding $med-padding $med-padding+$min-padding;

    > * {
      align-self: center;
      text-align: left;
      width: auto;
    }
    > div:first-child {
      width: auto;
    }
    .sign-in-wrapper {
      width: 100%;
    }
  }
}

@media $base-desktop {
  .primary-header .sign-in-wrapper {
    width: auto;
  }
  body {
    padding-left: $med-padding;
    padding-right: @padding-left;
  }
}
