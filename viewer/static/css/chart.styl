@import 'lib';

$tick-opacity = 0.3;
$line-width = 1px;

.no-data {
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: center;

  .chart-detail & {
    height: 65vh;
  }

  /* Fake axes and tick lines */
  border-left: $line-width solid $chart-gray;
  border-bottom: $line-width solid $chart-gray
  background-size: 40px 40px;
  background-image: linear-gradient(to left, alpha($chart-gray $tick-opacity) 1px, transparent 1px),
                    linear-gradient(to top, alpha($chart-gray $tick-opacity) 1px, transparent 1px);

  span {
    display: block;
    margin-bottom: $min-padding;

    &.warning {
      font-weight: bold;
    }
  }
}

.axis {
  path,
  line {
    fill: none;
    stroke: $chart-gray;
    stroke-width: $line-width;
  }
}

/* Give population lines opacity so that they can overlap each other and blend.
   We need to target g.population rather than the line itself because each
   g.population has only one line. */
.population {
  opacity: .80;
}

.line {
  fill: none;
  stroke-width: 2.0px;
}

.label {
  fill: $chart-gray
  font-weight: bold;
  font-size: 14px;
}

.tick {
  text {
    fill: $chart-gray;
    font-size: 11px;
    font-weight: 100;
  }
  line {
    opacity: $tick-opacity;
  }
}

.focus {
  display: none;

  circle {
    fill: #000;
    stroke-width: 2px;
  }
}

.hover-zone {
  fill: none;
  pointer-events: all;
}
